<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="210dp"
        android:layout_height= "wrap_content"
        android:layout_marginHorizontal="5dp"
        android:layout_marginVertical="15dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <View
                android:id="@+id/colored_bar"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/view_background" />

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="165dp"
                app:cardBackgroundColor="@color/deepblue"
                app:cardCornerRadius="5dp"
                android:layout_marginStart="15dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Shipping"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="5dp"
                    android:textSize="10sp"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/white"
                    />

            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="150dp"
                android:layout_marginTop="35dp"
                android:layout_height="125dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/mac" />

            <TextView
                android:id="@+id/product_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/colored_bar"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/poppins"
                android:layout_marginTop="5dp"
                android:text="Macbook Air M1"
                android:textColor="@color/deepblue"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$500"
                android:textColor="@color/deepblue"
                android:textSize="14sp"
                android:fontFamily="@font/poppins"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/colored_bar"
                android:layout_marginTop="5dp"
                android:textStyle="bold"/>



            <TextView
                android:id="@+id/product_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/poppins"
                android:layout_marginHorizontal="5dp"
                android:text="MacBook Air with M1 is an incredibly portable laptop — it’s nimble and quick, with a silent, fanless design and a beautiful Retina display. Thanks to its slim profile and all‑day battery life, this Air moves at the speed of lightness."
                android:layout_below="@id/product_title"/>








        </RelativeLayout>





    </androidx.cardview.widget.CardView>




</layout>