<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context=".featureModules.orderModule.ui.activities.OrderSuccessfulActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:layout_marginBottom="30dp"
            android:fontFamily="@font/poppins"
            android:text="Order Successful"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginHorizontal="50dp"/>


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/success"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:text="Your order has been accepted and handled over for execution"
            android:layout_marginHorizontal="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:fontFamily="@font/poppins"
            android:text="Your Order Number"
            android:layout_marginHorizontal="50dp"/>

        <TextView
            android:id="@+id/order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your Order No"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="15dp"
            android:padding="10dp"
            android:fontFamily="@font/poppins"
            android:background="@drawable/textview_background"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/shopMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="Continue Shopping"
            android:backgroundTint="@color/black"
            android:textSize="12sp"
            android:background="@drawable/button_background"
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="30dp"/>






    </LinearLayout>
</layout>